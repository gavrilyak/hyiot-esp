{
  "build": {
    "UART": "."
  },
  "modules": {
    "uart": "$(UART)/uart"
  },
  "preload": "uart",
  "platforms": {
    "esp": {
      "modules": {
        "*": "$(UART)/esp/*"
      }
    },
    "esp32": {
      "modules": {
        "*": "$(UART)/esp32/*"
      }
    },
    "gecko": {
      "modules": {
        "*": "$(UART)/gecko/*"
      }
    },
    "...": {
      "error": "serial unsupported"
    }
  }
}
