{
  "build": {
    "SDKCONFIGPATH": "./sdkconfig",
    "PARTITIONS_FILE": "./sdkconfig/partitions.csv",
    "NAME": "hydrolec-host"
  },
  "include": [
    "$(MODDABLE)/examples/manifest_base.json",
    "$(MODDABLE)/examples/manifest_net.json",
    "$(MODDABLE)/modules/network/mdns/manifest.json",
    "$(MODDABLE)/modules/network/mqtt/manifest.json",
    "$(MODDABLE)/modules/files/preference/manifest.json",
    "$(MODDABLE)/modules/files/resourceiterator/manifest.json",
    "$(MODDABLE)/modules/crypt/tls.json",
    "$(MODDABLE)/modules/base/instrumentation/manifest.json"
  ],
  "creation": {
    "stack": 512,
    "static": 131072,
    "keys": {
      "available": 300
    }
  },
  "defines": {
    "XS_MODS": 1
  },
  "modules": {
    "*": [
      "./main",
      "$(MODULES)/base/modules/*",
      "$(MODULES)/network/http/*",
      "$(MODULES)/network/sntp/*",
      "$(MODULES)/data/base64/*",
      "$(MODULES)/data/logical/*",
      "$(MODULES)/crypt/digest/*",
      "$(MODULES)/crypt/digest/kcl/*",
      "$(MODULES)/network/mqtt/*",
      "$(MODULES)/network/telnet/*",
      "$(MODULES)/base/debug/*"
    ],
    "cli": "$(MODULES)/base/cli/cli",
    "dns/server": "$(MODULES)/network/dns/dnsserver"
  },
  "resources": {
    "*-alpha": ["../../assets/OpenSans-Semibold-16"]
  },
  "preload": [
    "http",
    "sntp",
    "base64",
    "digest",
    "logical",
    "mqtt",
    "modules",
    "telnet",
    "cli/*"
  ],
  "strip": [
    "Atomics",
    "eval",
    "Function",
    "Proxy",
    "Reflect",
    "SharedArrayBuffer",
    "WeakMap",
    "WeakSet"
  ],
  "config": {
    "tls": {
      "DHE_RSA": false,
      "ECDHE_RSA": false
    }
  },
  "platforms": {
    "lin": {
      "include": ["./manifest_piu.json"],
      "data": {
        "*": ["../../certs/*"]
      }
    },
    "esp32": {
      "include": [
        "$(MODULES)/io/manifest.json",
        "$(MODULES)/files/file/manifest.json",
        "$(MODULES)/pins/digital/manifest.json",
        "$(MODULES)/pins/i2c/manifest.json"
      ],
      "modules": {
        "~": ["$(BUILD)/devices/esp32/setup/network"],
        "esp32": ["./native/*"],
        "esp32/ota": "$(BUILD)/devices/esp32/modules/ota/*",
        "modem": ["./modem/*"],
        "flash": ["$(MODULES)/files/flash/*", "$(MODULES)/files/flash/esp32/*"],
        "pins/digital": "$(MODULES)/pins/digital/digital",
        "pins/smbus": "$(MODULES)/pins/smbus/smbus",
        "cli/digital": "$(MODULES)/base/cli/commands/digital",
        "cli/files": "$(MODULES)/base/cli/commands/files",
        "cli/i2c": "$(MODULES)/base/cli/commands/i2c",
        "cli/network": "$(MODULES)/base/cli/commands/network"
      },
      "preload": ["pins/*"],
      "defines": {
        "modem": {
          "uart_tx_pin": 25,
          "uart_rx_pin": 26,
          "uart_rts_pin": 27,
          "uart_cts_pin": 23,
          "uart_event_task_stack_size": 3072,
          "uart_event_task_priority": 5,
          "uart_event_queue_size": 30,
          "uart_pattern_queue_size": 20,
          "uart_tx_buffer_size": 512,
          "uart_rx_buffer_size": 1024,
          "ppp_auth_username": "#user",
          "ppp_auth_password": "#pass",
          "device_sim800": 1
        },
        "i2c": {
          "sda_pin": 21,
          "scl_pin": 22
        },
        "spi": {
          "miso_pin": 12,
          "mosi_pin": 13,
          "sck_pin": 14
        },
        "ili9341": {
          "hz": 40000000,
          "cs_pin": 15,
          "dc_pin": 2,
          "spi_port": "HSPI_HOST",
          "registers_append": [
            "0x36, 1, 0xF0,",
            "0x21, 0,",
            "0xE0, 14, 0xD0, 0x08, 0x11, 0x08, 0x0C, 0x15, 0x39, 0x33, 0x50, 0x36, 0x13, 0x14, 0x29, 0x2d,",
            "0xE1, 14, 0xD0, 0x08, 0x11, 0x08, 0x06, 0x06, 0x39, 0x44, 0x51, 0x0b, 0x16, 0x14, 0x2f, 0x31,"
          ]
        }
      },
      "config": {
        "led": {
          "pin": "2"
        },
        "button": {
          "pin": "0"
        }
      }
    }
  }
}
